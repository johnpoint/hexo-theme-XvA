<script>
    $('.navbar-default').addClass("nav-bg");
    $(window).scroll(function (event) {
        if ($(window).scrollTop() >= document.body.clientHeight - 30) {
            $('.navbar-default').removeClass("nav-bg");
        }
        if ($(window).scrollTop() <= document.body.clientHeight - 30) {
            $('.navbar-default').addClass("nav-bg");
        }
    });
    function goindex() {
        window.scrollTo({
            top: document.body.clientHeight - 10,
            behavior: "smooth"
        })
    }
</script>
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@700&display=swap" rel="stylesheet">
<div id="bg-shaw">
    <center><i onclick="goindex()" class="iconfont icon-down"></i></center>
</div>
<h1 id="bg-title"><%= config.title -%></h1>
<center id="bg-text"><%- theme.bigimg.text -%></center>
