<!DOCTYPE html>
<%- partial('partial/head') %>

<body>
    <section id="navv">
        <%- partial('partial/header') %>
    </section>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="post-title">
                        <div class="page-header">
                            <h1>
                                <%= page.title %></h1>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <article class="post">
                        <div class="post-content">
                            <%- page.content %>
                        </div>
                        <% if (theme.post_copyright.enable == true && page.copyright != false){ %>
                        <%- partial('partial/copyright') %>
                        <% } %>
                    </article>
                    <% if(theme.comment.disqus.enable==true && page.comment!=false){ %>
                    <hr>
                    <%- partial('partial/disqus') %>
                    <% } %>
                    <% if(theme.comment.gitalk.enable==true && page.comment!=false){ %>
                    <%- partial('partial/gitalk') %>
                    <% } %>
                    <br>
                </div>
                <div class="col-md-3">
                    <%- partial('partial/postinfo') %>
                    <%- partial('partial/sidebar') %>
                </div>
            </div>
        </div>
    </section>
    <%- partial('partial/footer') %>
</body>