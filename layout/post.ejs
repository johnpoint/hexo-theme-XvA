<!DOCTYPE html>
<%- partial('partial/head') %>

<body>
    <div id="navv">
        <%- partial('partial/header') %>
    </div>
    <% if(theme.bigimg.enable){ %>
    <div id="bigimg">
        <%- partial('partial/bigimgpage') %>
    </div>
    <% } %>
    <div id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="post-title">
                        <div class="page-header">
                            <h1 class="posttitle">
                                <%= page.title %></h1>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <article class="post">
                        <div class="post-content">
                            <%- page.content %>
                        </div>
                        <% if (theme.post_copyright.enable == true && page.copyright != false){ %>
                        <%- partial('partial/copyright') %>
                        <% } %>
                    </article>
                    <% if(theme.comment.disqus.enable==true && page.comment!=false){ %>
                    <hr>
                    <div class="post-nav">
                        <% if(page.prev){ %>
                        <div class="post-nav-prev">
                            <a href="<%- url_for(page.prev.path) %>"><i class="iconfont icon-prev"></i><%= page.prev.title %></a>
                        </div>
                        <% } %>
                        <% if(page.next){ %>
                        <div class="post-nav-next">
                            <a href="<%- url_for(page.next.path) %>"><%= page.next.title %><i class="iconfont icon-next"></i></a>
                        </div>
                        <% } %>
                    </div>
                    <br>
                    <%- partial('partial/disqus') %>
                    <% } %>
                    <% if(theme.comment.gitalk.enable==true && page.comment!=false){ %>
                    <%- partial('partial/gitalk') %>
                    <% } %>
                    <br>
                </div>
                <div class="col-md-3 post-sidebar">
                    <%- partial('partial/postinfo') %>
                </div>
            </div>
        </div>
        <%- partial('partial/footer') %>
    </div>
</body>