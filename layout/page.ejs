<!DOCTYPE html>
<%- partial('partial/head') %>

<body>
    <div id="navv">
        <%- partial('partial/header') %>
    </div>
    <% if(page.bigimg){ %>
    <div id="bigimg">
        <%- partial('partial/bigimgpage') %>
    </div>
    <% } %>
    <div id="main">
        <div class="container">
            <div class="row">
                <% if(page.sidebar){ %>
                <div class="col-md-9">
                    <% }else{ %>
                    <% if(page.toc){ %>
                    <div class="col-md-9">
                        <% }else{ %>
                        <div class="col-md-12">
                            <% } %>
                            <% } %>

                            <article class="post">
                                <div class="post-title posttitle">
                                    <div class="page-header">
                                        <h1><%= __(page.title) %> <small><%- __(page.description) %></small></h1>
                                    </div>
                                </div>
                                <% if(page.layout=="tagscloud"){ %>
                                <%- partial('partial/tagscloud') %>
                                <% } else { %>
                                <div class="post-content">
                                    <%- page.content %>
                                </div>
                                <% } %>
                            </article>
                            <% if(theme.comment.disqus.enable==true && page.comment!=false){ %>
                            <hr>
                            <%- partial('partial/disqus') %>
                            <% } %>
                        </div>
                        <% if(page.sidebar){ %>
                        <br>
                        <div class="col-md-3">
                            <%- partial('partial/sidebar') %>
                        </div>
                        <% } %>
                        <% if(page.toc){ %>
                        <br>
                        <div class="col-md-3">
                            <%- toc(page.content,{class:'post-toc',list_number:true}) %>
                        </div>
                        <% } %>
                    </div>
                </div>
                <%- partial('partial/footer') %>
            </div>
        </div>
    </div>
</body>