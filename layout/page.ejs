<!DOCTYPE html>
<%- partial('partial/head') %>

<body>
    <section id="navv">
        <%- partial('partial/header') %>
    </section>
    <section id="main">
        <div class="container">
            <% if(page.sidebar){ %>
            <div class="row">
                <div class="ol-md-9">
                    <% } %>
                    <article class="post">
                        <div class="post-title">
                            <div class="page-header">
                                <h1><%= __(page.title) %> <small><%- __(page.description) %></small></h1>
                            </div>
                        </div>
                        <% if(page.layout=="tagscloud"){ %>
                        <%- partial('partial/tagscloud') %>
                        <% } else { %>
                        <div class="post-content">
                            <%- page.content %>
                        </div>
                        <% } %>
                    </article>
                    <% if(theme.comment.disqus.enable==true && page.comment!=false){ %>
                    <hr>
                    <%- partial('partial/disqus') %>
                    <% } %>
                </div>
                <% if(page.sidebar){ %>
                <br>
                <div class="col-md-3">
                    <%- partial('partial/sidebar') %>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <%- partial('partial/footer') %>
</body>